{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "types": ["@types/node", "nuxt"]
  },
  "include": [".nuxt/**/*.d.ts", "**/*.js", "**/*.ts", "**/*.vue", "nuxt.config.*", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", ".output"]
}
